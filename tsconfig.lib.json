{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "module": "CommonJS",
        "target": "es2018",
        "lib": ["es2019"],
        "noImplicitAny": true,
        "declaration": true,
        "outDir": "./lib",
        "declarationDir": "./types",
        "allowJs": true,
        "jsx": "react-jsx",
        "preserveConstEnums": true,
        "sourceMap": false,
        "skipLibCheck": true,
        "baseUrl": "./",
        "strict": true,
        "esModuleInterop": true,
        "disableReferencedProjectLoad": true,
    },
    "include": ["./src/lib/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.*", "./dist/**/*", "./types"]
}