{
    "compilerOptions": {
        "experimentalDecorators": true,
        "module": "ESNext",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "sourceMap": false,
        "strict": true,
        "target": "ESNext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "declaration": true,
        "outDir": "./lib",
        "declarationDir": "./types",
        "jsx": "react-jsx",
        "removeComments": true
    },
    "compileOnSave": true,
    "include": ["./src/lib/*.ts"],
    "exclude": ["node_modules", "**/*.spec.ts", "**/*.test.*", "./dist/**/*", "./types"]
}